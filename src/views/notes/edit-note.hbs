<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <form action="/notes/edit-note/{{editNote.id}}?_method=PUT" method="POST" class="card">
          {{#each errors}}
            <p>{{text}}</p>
          {{/each}}
          <input type="hidden" name="_method" value="PUT">
          <div class="card-content">
            <span class="card-title center-align">Edit note</span>
            <div class="row">
              <div class="input-field col s12">
                <input name="title" type="text" class="validate" value="{{editNote.title}}" autofocus>
                <label for="title">Title</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea name="content" type="text" class="validate materialize-textarea" data-length="120">{{editNote.content}}</textarea>
                <label for="content">Content</label>
              </div>
            </div>
          </div>
          <div class="card-action center-align">
            <button class="waves-effect waves-light btn-small" type="submit">Save note</button>
          </div>
      </form>
    </div>
  </div>
</div>