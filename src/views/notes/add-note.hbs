<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <form action="/notes/add" method="POST" class="card">
          <div class="card-content">
            <span class="card-title center-align">Add new note</span>
            <div class="row">
              <div class="input-field col s12">
                <input name="title" type="text" class="validate" autofocus>
                <label for="title">Title</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea name="content" type="text" class="validate materialize-textarea" data-length="120"></textarea>
                <label for="content">Content</label>
              </div>
            </div>
          </div>
          <div class="card-action center-align">
            <button class="waves-effect waves-light btn-small" type="submit">Add new note</button>
          </div>
      </form>
    </div>
  </div>
</div>